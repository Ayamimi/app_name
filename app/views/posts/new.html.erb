<h3>新規投稿</h3>
<p>
<%= form_for @post do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, :size => 50 %> 
    </div>
</p>
<p>
    <div class="field">
        <%= f.label :contents %>
        <%= f.text_area :body, :size => "50x10" %>
    </div>
    <div class="field">
        <%= f.label :video %>
        <%= f.file_field :video %>
    </div>
    <div class="field">
        <%= f.label :image1 %>
        <%= f.file_field :image1 %>
    </div>
    <div class="field">
        <%= f.label :image2 %>
        <%= f.file_field :image2 %>
    </div>
    <div class="field">
        <%= f.label :image3 %>
        <%= f.file_field :image3 %>
    </div>
    <div class="field">
        <%= f.label :image4 %>
        <%= f.file_field :image4 %>
    </div>
    <div class="field">
        <%= f.label :image5 %>
        <%= f.file_field :image5 %>
    </div>
    <div class="field">
        <%= f.label :youtube_url %>
        <%= f.text_field :youtube_url%>
    </div>
    <div class="field">
        <%= f.label :tag  %>
        <%= f.text_field :name, :size => 140 %>
    </div>
</p>
    <div>
        <%= f.submit "投稿する" %>
    </div>
<% end %>
<%= link_to "投稿一覧に戻る", posts_path %>